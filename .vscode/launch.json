{
    "version": "2.0.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net5.0/TestAntlr.dll",
            "args": ["${workspaceFolder}/examples/input.RTM"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "examples/input.RTM",
            "grammar": "grammars/RtmParser.g4",
            "printParseTree": true,
            "visualParseTree": false,
            "startRule": "start"
        }
    ]
}